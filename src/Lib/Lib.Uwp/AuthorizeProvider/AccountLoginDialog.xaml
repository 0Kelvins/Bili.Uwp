<ContentDialog
    x:Class="Richasy.Bili.Lib.Uwp.AccountLoginDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="using:Richasy.Bili.Locator.Uwp"
    xmlns:local="using:Richasy.Bili.Lib.Uwp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{loc:LocaleLocator Name=SignInTitle}"
    Style="{StaticResource DefaultContentDialogStyle}"
    CloseButtonText="{loc:LocaleLocator Name=Cancel}"
    PrimaryButtonClick="OnPrimaryButtonClickAsync"
    PrimaryButtonStyle="{StaticResource AccentButtonStyle}"
    PrimaryButtonText="{loc:LocaleLocator Name=SignIn}"
    CloseButtonClick="OnCloseButtonClick"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            x:Name="ErrorBlock"
            Style="{StaticResource CaptionTextBlockStyle}"
            Margin="0,0,0,12"
            HorizontalAlignment="Left"
            Foreground="{ThemeResource SystemControlErrorTextForegroundBrush}"
            TextWrapping="Wrap"
            Visibility="Collapsed" />

        <StackPanel
            Grid.Row="1"
            Width="320"
            Spacing="12">
            <TextBox
                x:Name="UserNameBox"
                HorizontalAlignment="Stretch"
                Header="{loc:LocaleLocator Name=UserName}"
                PlaceholderText="{loc:LocaleLocator Name=UserNameHolder}" />
            <PasswordBox
                x:Name="PasswordBox"
                HorizontalAlignment="Stretch"
                Header="{loc:LocaleLocator Name=Password}"
                PlaceholderText="{loc:LocaleLocator Name=PasswordHolder}" />
        </StackPanel>

        <Grid
            x:Name="CaptchaContainer"
            Grid.Row="2"
            Margin="0,12,0,0"
            RowSpacing="8"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Style="{StaticResource CaptionTextBlockStyle}"
                HorizontalAlignment="Left"
                Text="{loc:LocaleLocator Name=Captcha}" />
            <Grid Grid.Row="1" ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="CaptchaBox"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    PlaceholderText="{loc:LocaleLocator Name=CaptchaHolder}" />
                <Image
                    x:Name="CaptchaImage"
                    Grid.Column="1"
                    Height="30"
                    Stretch="Uniform" />
            </Grid>
        </Grid>
    </Grid>

</ContentDialog>
